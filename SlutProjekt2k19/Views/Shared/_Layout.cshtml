@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Flint & Steel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr");

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark nav-main fixed-top nothiccnav">
        <div class="container-fluid">
            <a href="/">
                <img class="nav-img" alt="logo" src="../../Images/FnSWhite.png" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-link">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-link">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-link">@Html.ActionLink("Profile", "Index", "Profiles")</li>
                    }
                </ul>
                <ul class="nav navbar-nav nav-link">
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>
            </div>
        </div>

    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Flint & Steel</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>